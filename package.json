{
  "name": "react-ssr",
  "version": "1.0.0",
  "description": "fork of https://github.com/alexnm/react-ssr",
  "main": "index.js",
  "scripts": {
    "test": "jest --config=./jest.json --ci --env=node",
    "build": "npm run clean && tsc -p ./tsconfig.prod.json && webpack --progress --mode=production",
    "dev": "npm run clean && npm-run-all --parallel server client",
    "server": "nodemon index.js",
    "client": "webpack --watch --progress",
    "lint": "tslint src",
    "bundlesize": "bundlesize",
    "precommit": "tslint src --quiet",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "minimist": "^1.2.0",
    "react": "latest",
    "react-dom": "latest",
    "react-helmet": "latest",
    "react-redux": "latest",
    "react-router-dom": "latest",
    "redux": "latest",
    "redux-thunk": "latest",
    "reselect": "^3.0.1"
  },
  "devDependencies": {
    "@types/express": "latest",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "@types/react-helmet": "latest",
    "@types/react-redux": "latest",
    "@types/react-router": "latest",
    "@types/react-router-dom": "latest",
    "copy-webpack-plugin": "^4.5.2",
    "css-loader": "latest",
    "express": "latest",
    "file-loader": "^2.0.0",
    "friendly-errors-webpack-plugin": "latest",
    "jest": "latest",
    "nodemon": "latest",
    "npm-run-all": "latest",
    "rimraf": "^2.6.2",
    "style-loader": "^0.23.0",
    "ts-jest": "^23.1.4",
    "ts-loader": "^5.0.0",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.3",
    "webpack": "latest",
    "webpack-bundle-analyzer": "latest",
    "webpack-cli": "latest",
    "webpack-dev-server": "latest",
    "webpack-manifest-plugin": "^2.0.3"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "Firefox ESR"
  ],
  "bundlesize": [
    {
      "path": "./dist/js/app.bundle.js",
      "maxSize": "170 kB"
    },
    {
      "path": "./dist/js/lib.bundle.js",
      "maxSize": "110 kB"
    }
  ],
  "author": "",
  "license": "MIT"
}
